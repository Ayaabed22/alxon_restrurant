<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".checkoutotp.OtpAuthentication">
    <ImageView
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="125dp"
        android:src="@drawable/back"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="125dp"
        android:src="@drawable/logo"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="OTP Authentication"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signInTextView"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="An authentication code has been \n
        sent to your phone number *********15"
        android:textStyle="bold" />


    <EditText
        android:gravity="center"
        android:id="@+id/editTextOtpOne"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/buttonview"
        android:backgroundTint="@color/white"
        app:backgroundTint="@color/gray" />

    <EditText
        android:gravity="center"
        android:id="@+id/editTextOtpTwo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/buttonview"
        android:backgroundTint="@color/white"
        app:backgroundTint="@color/gray" />

    <EditText
        android:gravity="center"
        android:id="@+id/editTextOtpThree"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/buttonview"
        android:backgroundTint="@color/white"
        app:backgroundTint="@color/gray" />

    <EditText
        android:gravity="center"
        android:id="@+id/editTextOtpFour"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/buttonview"
        android:backgroundTint="@color/white"
        app:backgroundTint="@color/gray" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/buttonview"
        android:backgroundTint="@color/white"
        android:text="Didnâ€™t receive code."
        app:backgroundTint="@color/gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/white"
        android:text="Resend ( 42s )"
        android:textColor="@color/purple_200"
        app:backgroundTint="@color/gray" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_Continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="43dp"
        android:padding="15dp"
        android:text="Continue"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/purple_200"
        app:background="@drawable/buttonview"
        app:backgroundTint="@color/white"
        app:cornerRadius="10dp"
        app:strokeColor="@color/purple_200"
        app:strokeWidth="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="79dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="@color/white"

        android:text="By Signing up, you agree to our"
        app:backgroundTint="@color/gray" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="110dp"
        android:layout_marginTop="670dp"
        android:layout_marginEnd="121dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="Term and Conditions"
        android:textColor="@color/purple_200"
        app:backgroundTint="@color/gray" />


</RelativeLayout>